{
  "name": "ShoppingList",
  "version": "1.0.0",
  "description": "shopping list Electron desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"ShoppingList\"",    
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tobamaestro/shoppinglist.git"
  },
  "author": "tobamaestro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tobamaestro/shoppinglist/issues"
  },
  "homepage": "https://github.com/tobamaestro/shoppinglist#readme",
  "dependencies": {
    "electron": "^4.0.5"
  },
  "devDependencies": {
    "electron-packager": "^13.1.0"
  }
}
